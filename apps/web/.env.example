# ChefCloud Web Environment Example
# Copy to .env.local and customize

# Required: API URL
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Optional: Version display
NEXT_PUBLIC_APP_VERSION="dev"

# Session idle timeout (optional)
# NEXT_PUBLIC_ENABLE_IDLE_TIMEOUT=1
# NEXT_PUBLIC_SESSION_IDLE_MINUTES=15
# NEXT_PUBLIC_SESSION_IDLE_WARNING_MINUTES=2

# Demo fallbacks (dev only)
# NEXT_PUBLIC_ALLOW_DEMO_FALLBACK=true

# POS offline support (optional)
# NEXT_PUBLIC_ENABLE_POS_SW=true
# NEXT_PUBLIC_POS_CACHE_MAX_AGE_HOURS=24

# DevPortal config (optional)
# NEXT_PUBLIC_SANDBOX_API_BASE_URL="https://sandbox.api.chefcloud.io"
# NEXT_PUBLIC_PRODUCTION_API_BASE_URL="https://api.chefcloud.io"
# NEXT_PUBLIC_DEV_DOCS_URL="https://docs.chefcloud.io"
