{
  "name": "chefcloud",
  "version": "0.1.0",
  "private": true,
  "description": "Enterprise-grade, offline-first POS for restaurants and bars in Uganda",
  "license": "MIT",
  "author": "Ssemakula Allan",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmazune/chefcloud.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "verify:no-wip-imports": "node scripts/verify-no-wip-imports.mjs",
    "staging:up": "docker compose -f docker-compose.staging.yml up -d --build",
    "staging:down": "docker compose -f docker-compose.staging.yml down",
    "staging:down:clean": "docker compose -f docker-compose.staging.yml down -v",
    "staging:logs": "docker compose -f docker-compose.staging.yml logs -f",
    "staging:logs:api": "docker compose -f docker-compose.staging.yml logs -f api",
    "staging:logs:web": "docker compose -f docker-compose.staging.yml logs -f web",
    "staging:migrate": "docker compose -f docker-compose.staging.yml exec api npx prisma migrate deploy",
    "staging:seed": "docker compose -f docker-compose.staging.yml exec api npx prisma db seed",
    "staging:smoke": "API_BASE_URL=http://localhost:3001 node scripts/verify/smoke-verification.mjs",
    "staging:shell": "docker compose -f docker-compose.staging.yml exec api sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@swc/core": "^1.14.0",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "axios": "^1.13.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "madge": "^8.0.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "turbo": "^1.12.3",
    "typescript": "^5.3.3"
  }
}
