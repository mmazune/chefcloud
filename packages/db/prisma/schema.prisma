  journalLinks         PayrollRunJournalLink[]
  payslips             Payslip[] // M10.7: Payslips generated from this run
  remittanceSourceLink RemittanceSourceLink? // M10.10: Link to generated remittance batch

  @@unique([payPeriodId, branchId])
  @@index([orgId, status])
  @@index([payPeriodId])
  @@map("payroll_runs")
}

