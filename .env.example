# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/chefcloud"

# Redis - Use REDIS_URL for all environments (recommended)
# For production: Use full connection URL (e.g., from Upstash, Railway, etc.)
# For development: Defaults to redis://redis:6379 in Codespaces or redis://localhost:6379 locally
REDIS_URL="redis://localhost:6379"

# Legacy Redis config (deprecated - use REDIS_URL instead)
# These are only used if REDIS_URL is not set
# REDIS_HOST="localhost"
# REDIS_PORT="6379"

# JWT
JWT_SECRET="change-this-to-a-secure-random-string-in-production"

# Password/PIN Hashing (optional - defaults shown)
PIN_HASH_MEMORY="65536"
PIN_HASH_ITER="3"

# API
API_PORT="3001"

# Sync Service
SYNC_PORT="3003"

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Environment
NODE_ENV="development"

# Payments
PAY_MTN_ENABLED="false"
PAY_AIRTEL_ENABLED="false"
PAY_MTN_SECRET="changeme"
PAY_AIRTEL_SECRET="changeme"
PAYMENTS_FORCE_FAIL=""

# EFRIS (Uganda Revenue Authority)
FISCAL_ENABLED="false"
EFRIS_TIN=""
EFRIS_DEVICE=""
EFRIS_API_KEY=""
FISCAL_FORCE_SUCCESS="false"

# Anti-theft Analytics
LATE_VOID_MIN="5"
ALERTS_EMAIL_FROM="noreply@chefcloud.local"
SLACK_WEBHOOK_URL=""

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=""
SENTRY_DSN=""
LOG_LEVEL="info"

# Support Sessions
SUPPORT_MAX_SESSION_MIN="30"

# Spout Hardware Integration
SPOUT_VERIFY="false"
SPOUT_VENDOR="SANDBOX"

# Security
RATE_LIMIT_PUBLIC="60"
CORS_ALLOWLIST="http://localhost:3000,http://localhost:5173"
VERIFY="true"
WEBHOOK_SECRET=""

# Owner Digests
DIGEST_FROM_EMAIL="noreply@chefcloud.local"

# SMTP Configuration (for owner digests and email alerts)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_SECURE="false"

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=""

# Live Streams (SSE)
STREAM_KEEPALIVE_SEC="15"
STREAM_MAX_CLIENTS="200"
