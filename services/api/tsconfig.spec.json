{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["jest", "node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"]
}
