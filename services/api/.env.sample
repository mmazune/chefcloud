# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/chefcloud?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins for production)
# CORS_ORIGINS="https://app.chefcloud.io,https://staging.chefcloud.io"

# WebAuthn
RP_ID="localhost"
ORIGIN="http://localhost:5173"

# Organization (for demos/dev)
DEFAULT_ORG_ID="demo"

# M33-DEMO-S4: Demo org protections
DEMO_PROTECT_WRITES=0
DEMO_TAPAS_ORG_SLUG="tapas-demo"

# Feature Flags (disabled by default)
DEVPORTAL_ENABLED=0
DOCS_ENABLED=0
METRICS_ENABLED=0

# Logging
LOG_LEVEL=info
# PRETTY_LOGS=1  # Enable for development
# LOG_SILENCE_HEALTH=1
# LOG_SILENCE_METRICS=1

# Redis (optional)
# REDIS_URL="redis://localhost:6379"
# REDIS_HOST="localhost"
# REDIS_PORT=6379

# Observability (optional)
# SENTRY_DSN="https://xxx@sentry.io/123"
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"

# Rate Limiting
RATE_LIMIT_PUBLIC=60

# Build Metadata (auto-set in CI)
# BUILD_VERSION=1.0.0
# BUILD_SHA=abc123
# BUILD_DATE=2026-01-10T00:00:00Z
